

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:"form-signin"}) do |f| %>
<h1 class ="text-center">Sign up</h1>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false, input_html:{class:"form-control"}%>
    <%= f.input :password, required: true, placeholder: "Password", label: false, input_html:{class:"form-control"}%>
    <%= f.input :password_confirmation, required: true, placeholder: "Password Confirmation", label: false, input_html:{class:"form-control"}%>


    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg btn-block" %>


<%= render "devise/shared/links" %>
<% end %>